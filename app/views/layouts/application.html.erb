<!DOCTYPE html>
<html>
  <head>
    <title>Jello</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <script type="text/javascript">
      window.jelloURL = "<%= image_url('jello-pudding.png') %>";
      window.puddingIcon = "<%= image_url('pudding.svg') %>";
      window.filmIcon = "<%= image_url('film-strip.svg') %>";
      window.bowlIcon = "<%= image_url('bowling.svg') %>";
      window.bballIcon = "<%= image_url('basketball.svg') %>";
      window.vgIcon = "<%= image_url('videogame.svg') %>";
      window.bagIcon = "<%= image_url('shopping-bag.svg') %>";
      window.teaIcon = "<%= image_url('bubble-tea.svg') %>";
      window.lportalURL = "<%= image_url('left-portal.svg') %>";
      window.rportalURL = "<%= image_url('right-portal.svg') %>";
    </script>
    
  </head>

  <body>
    <%= yield %>
  </body>
</html>